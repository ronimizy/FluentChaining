<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <LangVersion>10</LangVersion>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>
    
    <PropertyGroup>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    <PropertyGroup>
        <Authors>ronimizy</Authors>
        <Title>FluentChaining</Title>
        <Description>A lightweight library for implementing responsibility chains in fluent style.</Description>
        <PackageProjectUrl>https://github.com/ronimizy/FluentChaining</PackageProjectUrl>
        <RepositoryUrl>https://github.com/ronimizy/FluentChaining</RepositoryUrl>
        <PackageVersion>1.0.3</PackageVersion>
        <PackageReleaseNotes>Lowered DI version.</PackageReleaseNotes>
        <RepositoryType>git</RepositoryType>
        <PackageTags>responsibility-chain;fluent;</PackageTags>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="FluentScanning.DependencyInjection" Version="1.1.2" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="3.0.0" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\README.md" Pack="true" PackagePath="\" />
    </ItemGroup>

</Project>
